<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/head_my_rent_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_round_white_top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_12"
            android:text="选择支付方式"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/pay_rent_type_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="￥10.0"
            android:textColor="#333333"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pay_rent_type_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_12">

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="wrap_content"
                    android:src="@drawable/popup_item_wx" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/sp_16"
                    android:text="微信支付"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/pay_rent_type_isSelect_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/popup_item_select" />
            </LinearLayout>

            <TextView
                android:id="@+id/pay_rent_type_sure_pay"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/rectangle_yellow"
                android:gravity="center_horizontal|center_vertical"
                android:text="确认支付"
                android:textColor="#363636"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_my_rent_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:src="@drawable/buy_success" />

        <TextView
            android:id="@+id/pay_rent_type_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center_horizontal"
            android:text="恭喜您，成功充值了一笔钱"
            android:textColor="#ff333333"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/pay_rent_type_success_ok"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/rectangle_yellow"
            android:gravity="center_horizontal|center_vertical"
            android:text="好的"
            android:textColor="#000000"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
