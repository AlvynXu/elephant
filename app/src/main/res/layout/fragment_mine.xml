<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.transaction.CrowdFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/mine_title_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar"
            android:background="#F6F6F6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="我的"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mine_out"
                android:layout_width="@dimen/permission_dp_25"
                android:layout_height="@dimen/permission_dp_25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_38"
                android:src="@drawable/app_out" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mine_title_ll"
            android:background="#fff5f5f5">

            <include layout="@layout/fragment_mine_head" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_224"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_180"
            android:layout_marginRight="@dimen/dp_10"
            app:cardCornerRadius="7dp"
            app:cardElevation="8px"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/mine_zw_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mine_zw_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="@dimen/dp_40"
                            android:text="0"
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_20"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingTop="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:gravity="center_vertical"
                                android:src="@drawable/team_green_round" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:paddingLeft="@dimen/dp_6"
                                android:text="我的展位"
                                android:textColor="#ff333333"
                                android:textSize="@dimen/sp_16" />

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/mine_dz_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mine_dz_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="@dimen/dp_40"
                            android:text="0"
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_20"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingTop="@dimen/dp_10">

                            <ImageView
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:gravity="center_vertical"
                                android:src="@drawable/team_green_round" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:paddingLeft="@dimen/dp_6"
                                android:text="我的地主"
                                android:textColor="#ff333333"
                                android:textSize="@dimen/sp_16" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/background_dark" />

                <LinearLayout
                    android:id="@+id/mine_project_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">

                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:gravity="center_vertical"
                        android:src="@drawable/team_yellow_round" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_6"
                        android:text="我的推广"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="@dimen/dp_10"
                        android:padding="@dimen/dp_4"
                        android:src="@drawable/more_black" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/background_dark" />

                <LinearLayout
                    android:id="@+id/mine_project_vip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20">

                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:gravity="center_vertical"
                        android:src="@drawable/team_yellow_round" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_6"
                        android:text="升级会员"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="@dimen/dp_10"
                        android:padding="@dimen/dp_4"
                        android:src="@drawable/more_black" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_below="@+id/card_head"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_90"
            app:cardCornerRadius="7dp"
            app:cardElevation="8px"
            app:cardUseCompatPadding="false">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>