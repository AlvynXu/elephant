<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_update_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/app_update_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4"
            android:text="版本更新"
            android:textColor="#ff212121"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/app_update_version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4"
            android:text="更新版本：V1.0.5"
            android:textColor="#ff212121"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/app_update_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_24"
        android:paddingTop="@dimen/dp_42"
        android:paddingRight="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_20"
        android:text="1.谁知道更新了什么功能
        2.第二个功能和第一个功能很像的
        3.第三个功能和第二个功能很像的like busi"
        android:textColor="#ff212121"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/app_update_ok_tv"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/bg_border_green"
        android:gravity="center"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="更新"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</LinearLayout>
