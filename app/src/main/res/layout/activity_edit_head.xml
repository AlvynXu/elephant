<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类别选择"
            android:textColor="#101010"
            android:textSize="@dimen/sp_16" />

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dp_42"-->
        <!--android:layout_marginTop="@dimen/dp_4"-->
        <!--android:background="@drawable/bg_border_default"-->
        <!--android:gravity="center_vertical"-->
        <!--android:paddingLeft="@dimen/dp_4">-->

        <!--<TextView-->
        <!--android:id="@+id/edit_head_category_tv"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="8"-->
        <!--android:text="类别"-->
        <!--android:textSize="@dimen/sp_18" />-->

        <!--<ImageView-->
        <!--android:id="@+id/edit_head_category_choose_im"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="@dimen/dp_16"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_weight="2"-->
        <!--android:src="@drawable/item_edit_down" />-->
        <!--</LinearLayout>-->
        <com.kupo.ElephantHead.widget.CustomTypeList
            android:id="@+id/customTypeList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.kupo.ElephantHead.widget.CustomTypeList>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_20"
            android:text="封面图"
            android:textColor="#101010"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:id="@+id/add_head_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_border_b3"
            android:gravity="center"
            android:orientation="vertical">

            <com.kupo.ElephantHead.widget.FullImage
                android:id="@+id/edit_head_bg_im"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/add_bg"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_4"
                android:scaleType="fitXY"
                android:src="@drawable/add_bg" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_40"
            android:text="广告标题"
            android:textColor="#101010"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/edit_head_title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_border_b3"
            android:hint="请输入标题(40个字以内)"
            android:minHeight="@dimen/dp_45"
            android:maxLength="40"
            android:paddingLeft="@dimen/dp_10"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话/微信"
            android:textColor="#101010"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/edit_head_phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_border_b3"
            android:hint="请输入手机号微信号(20个字以内)"
            android:minHeight="@dimen/dp_45"
            android:paddingLeft="@dimen/dp_10"
            android:maxLength="20"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系地址"
            android:textColor="#101010"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/edit_head_location_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_border_b3"
            android:hint="请输入联系地址(40个字以内)"
            android:minHeight="@dimen/dp_45"
            android:paddingLeft="@dimen/dp_10"
            android:maxLength="40"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/line_stroke" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="详情"
        android:textColor="#101010"
        android:textSize="@dimen/sp_16" />
</LinearLayout>
