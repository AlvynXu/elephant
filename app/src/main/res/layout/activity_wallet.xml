<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.home.activity.WalletActivity">

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_scrollFlags="scroll">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wallet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="可用余额"
            android:textColor="#ff909090"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/wallet_balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_36" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5">

            <TextView
                android:id="@+id/wallet_recharge_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_green"
                android:paddingLeft="@dimen/dp_60"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_60"
                android:paddingBottom="@dimen/dp_8"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />


            <TextView
                android:id="@+id/wallet_cash_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_26"
                android:background="@drawable/bg_border_yellow"
                android:paddingLeft="@dimen/dp_60"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_60"
                android:paddingBottom="@dimen/dp_8"
                android:text="提现"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>